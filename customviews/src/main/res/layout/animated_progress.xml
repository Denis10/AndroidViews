<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlCircles"
        android:layout_width="208dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        >

        <ImageView
            android:id="@+id/imgPrimary"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/primary_circle"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            />

        <ImageView
            android:id="@+id/imgAccent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/accent_circle"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_toRightOf="@+id/imgPrimary"
            />

        <ImageView
            android:id="@+id/imgGreen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/green_circle"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_toRightOf="@+id/imgAccent"
            />

        <ImageView
            android:id="@+id/imgViolet"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/violet_circle"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_toRightOf="@+id/imgGreen"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@+id/rlCircles"
        android:text="@string/loading"
        android:textAllCaps="true"
        />

    <View
        android:id="@+id/bottomMarginView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/txtMessage"
        />
</RelativeLayout>